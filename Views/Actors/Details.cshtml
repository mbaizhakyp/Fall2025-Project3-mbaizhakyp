@model Fall2025_Project3_mbaizhakyp.Models.ViewModels.ActorDetailViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Actor.Name</h1>

<div>
    <h4>Actor Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.Gender)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actor.Gender)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.Age)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actor.Age)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.IMDBHyperlink)
        </dt>
        <dd class = "col-sm-10">
            <a href="@Model.Actor.IMDBHyperlink" target="_blank">@Model.Actor.IMDBHyperlink</a>
        </dd>
        
        @if (Model.Actor.Photo != null && Model.Actor.Photo.Length > 0)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Actor.Photo)
            </dt>
            <dd class = "col-sm-10">
                @{
                    var base64String = Convert.ToBase64String(Model.Actor.Photo);
                    var imgSrc = $"data:image/*;base64,{base64String}";
                }
                <img src="@imgSrc" style="max-width: 400px;" alt="Actor Photo" />
            </dd>
        }
    </dl>
</div>

<hr />
<h4>Movies featuring this Actor</h4>
@if (Model.Movies.Any())
{
    <ul>
        @foreach (var movie in Model.Movies)
        {
            <li>
                <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id">@movie.Title</a>
            </li>
        }
    </ul>
}
else
{
    <p>This actor has not been linked to any movies yet.</p>
}


<hr />
<h4>AI-Generated "Twitter" Feed</h4>
<h5>Overall Sentiment: @Model.OverallSentiment</h5>

<table class="table">
    <thead>
        <tr>
            <th>Tweet</th>
            <th>Sentiment Score (Compound)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tweet in Model.Tweets)
        {
            <tr>
                <td>@tweet.TweetText</td>
                <td>@tweet.SentimentScore.ToString("F2")</td>
            </tr>
        }
    </tbody>
</table>

<br />
<div>
    <a asp-action="Edit" asp-route-id="@Model.Actor.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>